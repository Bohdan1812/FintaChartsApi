{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "FintaChartsApi": "Information",
        "Refit": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }, // Виведення в консоль
      { "Name": "Debug" }, // Виведення в Debug Output
      { // Виведення у файл
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt", // Шлях до файлу. {-Date} буде додано при ротації
          "rollingInterval": "Day", // Ротація файлу щодня
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact", // Компактний JSON-формат
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}" // Текстовий формат
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "FintaChartsApi"
    }
  },
  "AllowedHosts": "*",
  "Fintacharts": {
    "WebSocketUri": "wss://platform.fintacharts.com/api/streaming/ws/v1/realtime",
    "GrantType": "password",
    "ClientId": "app-cli",
    "ApiBaseUrl": "https://platform.fintacharts.com",
    "Realm": "fintatech",
    "Username": "r_test@fintatech.com",
    "Password": "kisfiz-vUnvy9-sopnyv"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=fintacharts_db;Username=fintacharts_user;Password=db_password12!"
  }
}
